<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_graphing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abhinabera.jarvis.Graphing"
    android:background="#9fa8da">


        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/android_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:magic_button_size="100dp"
            app:button_icon="@drawable/android"
            app:button_icon_width="75dp"
            app:button_icon_height="75dp"
            app:hide_text="ANDROID"
            app:hide_text_size="7.5dp"
            android:layout_marginTop="100dp"
            app:hide_text_color="@android:color/black"
            app:icon_button_color="@color/colorPrimary"
            app:expandable_area_color="@color/colorAccent"
            android:layout_marginLeft="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"
            >

        </br.com.bloder.magic.view.MagicButton>

        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/unity_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:magic_button_size="100dp"
            android:layout_centerHorizontal="true"
            app:button_icon="@drawable/unity"
            app:button_icon_width="75dp"
            app:button_icon_height="75dp"
            app:hide_text= "UNITY"
            app:hide_text_size="7.5dp"
            app:hide_text_color="@android:color/black"
            app:icon_button_color="@color/colorPrimary"
            app:expandable_area_color="@color/colorAccent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/android_icon" />

        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:magic_button_size="100dp"
            android:layout_centerHorizontal="true"
            app:button_icon="@drawable/quit"
            app:button_icon_width="75dp"
            app:button_icon_height="75dp"
            app:hide_text="MAIN MENU"
            app:hide_text_size="7.5dp"
            app:hide_text_color="@android:color/black"
            app:icon_button_color="@color/colorPrimary"
            app:expandable_area_color="@color/colorAccent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/unity_icon" />

</RelativeLayout>
